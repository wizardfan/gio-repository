<tool id="pepMW" name="Peptide MW and hydro" force_history_refresh="True" version="1.0.0">
    <description>Calculate the molecular weight and hydrophobicity for peptides within a fasta file</description>
<!--  <command interpreter="perl">print.pl $output $output.id $__new_file_path__</command>-->
    <command interpreter="perl">$__root_dir__/../gio_applications/inclusion/pepMW.pl $input $output</command>
    <inputs>
	<param  format="fasta" name="input" type="data" label="Input file"/>
  </inputs>
   <outputs>
    <data format="tabular" name="output" label="#echo os.path.splitext (str ($input.name))[0]#-MW.fasta"/>
   </outputs>
</tool>
