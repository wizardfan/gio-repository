<tool id="replace_with_original" name="Replace with original headers" version="1.0.0" force_history_refresh="True">
	<description>
		Replace the header generated by Fasta Header Manipulation serial option with its original header
	</description>
	<command interpreter="perl">$__root_dir__/../gio_applications/misc/putHeaderBack.pl $type.input_type $input $mapping > $output</command>
	<inputs>
    		<conditional name="type">
			<param name="input_type" type="select" label="The type of the file needing replacement">
                		<option value="1">GMAP result</option>
        	    		<option value="2">Extract Hits result</option>
        	    		<option value="3">PIT:Integrate GFF3 result</option>
        	    		<option value="4">PIT:Integrate ORF result</option>
            		</param>
			<when value="1">
                		<param format="sam" name="input" type="data" label="GMAP SAM result file"/>
            		</when>
            		<when value="2">
                		<param format="tabular" name="input" type="data" label="Extract Hits TSV file"/>
            		</when>
            		<when value="3">
                		<param format="gff3" name="input" type="data" label="PIT:Integrate GFF3 file"/>
            		</when>
            		<when value="4">
                		<param format="fasta" name="input" type="data" label="PIT:Integrate ORF file"/>
            		</when>
        	</conditional>
		<param name="mapping" type="data" format="tabular" label="The mapping file generated by Fasta Header Manipulation"/>
	</inputs>
	<outputs>
		<data format="input" name="output" label="Replace with original header on ${on_string}"/>
	</outputs>
	<help>
This tool replaces the headers generated by the serial number option in Fasta Header Manipulation tool with the headers in the original fasta file to make it more readable
	</help>
</tool>
